

{{#if isValid}}
<div class="container-fluid d-flex flex-column">

    <div>
        <h1>BIENVENIDO {{user}} </h1>
        <h2>{{email}}</h2>
        <h2>USUARIO</h2>
    </div>


    <div class="d-flex justify-content-center flex-wrap">
    {{#each docs}}
        <div class="col-md-3 m-3">
            <div class="shadow bg-dark text-white" style="border-radius: 1rem;">
                <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/041.webp" class="card-img-top" alt="Hollywood Sign on The Hill" style="border-radius: 1rem;">
                <div class="card-body text-center">
                    <h5 class="card-title">Titulo {{this.title}}</h5>
                    <p class="card-text">Descripcion: {{this.description}}</p>
                    <p class="card-text">Categoria: {{this.category}}</p>
                    <button class="addProduct btn btn-outline-light" type="submit">agregar al carrito</button>
                </div>
            </div>
        </div>
    {{/each}}
</div>




    <div class="d-flex flex-row justify-content-center">
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}

            {{!-- numero de pagina --}}
            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}
    </div>

</div>


    <button id="closeAll" type="button" class="btn btn-outline-dark btn-xs ">Cerrar sesion</button>

    {{else}}
    <h1>No hay productos para mostrar</h1>
    {{/if}}



<script src="/js/logout.js"></script>
